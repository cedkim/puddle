{
  "name": "Puddle",
  "displayName": "Puddle",
  "version": "0.1.0",
  "description": "The internet of apps.",
  "author": "Geschafft <hello@geschafft.co> (https://geschafft.co)",
  "repository": "https://github.com/geschafft-co/puddle",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder build -mw",
    "ship": "electron-builder build -mw -p always -c electron-builder.yml"
  },
  "devDependencies": {
    "electron": "^4.0.7",
    "electron-builder": "^20.38.5",
    "electron-updater": "^4.0.6"
  },
  "build": {
    "appId": "co.geschafft.puddle",
    "productName": "Puddle",
    "copyright": "Â© Geschafft",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "Puddle",
      "icon": "build/icon.icns",
      "window": {
        "width": "540",
        "height": "380"
      }
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "uninstallDisplayName": "Puddle"
    }
  }
}
